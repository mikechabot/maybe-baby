{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts", "./src/**/*.spec.js"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
