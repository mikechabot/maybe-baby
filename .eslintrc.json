{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": "airbnb-base",
  "plugins": ["chai-friendly", "@typescript-eslint"],
  "rules": {
    "indent": ["error", 2],
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ]
  }
}
